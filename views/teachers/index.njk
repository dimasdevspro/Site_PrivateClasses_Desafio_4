{% extends "layout.njk"%}

{% block content %}
<div class="card table-container">
    <a href="/teachers/create">Novo</a>
 <table width="100%">
     <thead>
         <tr>
             <th>Professor</th>
             <th>Disciplinas</th>
             <th>Ação</th>
         </tr>
     </thead>
     <tbody>
         {% for teacher in teachers %}
         <tr>
             <td><span style="background-image: url({{teacher.avatar_url}})"></span>
                 {{teacher.name}}</td>
             <td>{{teacher.subjects}}</td>
             <td><a href="/teachers/{{teacher.id}}">ver</a></td>
             {% endfor%}
         </tr>
     </tbody>
 </table>
</div>
{% endblock %}
